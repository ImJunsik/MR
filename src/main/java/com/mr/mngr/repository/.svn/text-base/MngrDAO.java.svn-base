@Repository
public class MngrDAO extends BaseSqlMapRepository {


    /**
     * 단일코드 조회
     * @param commCdVO
     * @return
     */
    public CommCdVO selectCode(CommCdVO commCdVO) {
        return selectOne("mr.mngr.selectCode", commCdVO);
    }

    /**
     * 코드 리스트 조회
     * @param commCdVO
     * @return
     */
    public List<CommCdVO> selectCodeList(CommCdVO commCdVO){
        return selectList("mr.mngr.selectCodeList", commCdVO);
    }

    /**
     * 신규코드 등록
     * @param commCdVO
     * @return
     */
    public int insertCode(CommCdVO commCdVO) {
        return insert("mr.mngr.insertCode", commCdVO);
    }

    /**
     * 코드정보 업데이트
     * @param commCdVO
     * @return
     */
    public int updateCode(CommCdVO commCdVO) {
        return update("mr.mngr.updateCode", commCdVO);
    }

    /**
     * 코드정보 삭제
     * @param commCdVO
     * @return
     */
    public int updateCodeDelYn(CommCdVO commCdVO) {
        return update("mr.mngr.updateCodeDelYn", commCdVO);
    }

    /**
     * 결재라인정보 조회
     * @param mrReqNo
     * @return
     */
    public List<ChrgrChgHist> selectMngrChangeList(int mrReqNo){
        return selectList("mr.mngr.selectMngrChangeList", mrReqNo);
    }



}
