@Repository
public class MainDAO  extends BaseSqlMapRepository {

    /**
     * 로그인 사용자의 MR Summary
     * @param empInfoVo
     * @return MR Summary
     */
    public List<MrSummary> selectMrSummary(EmpInfoVo empInfoVo){
        return selectList("mr.main.selectSummary", empInfoVo);
    }

    /**
     * 로그인 사용자가 결재라인에 포함된 MR Summary
     * @param empInfoVo
     * @return
     */
    public List<MrSummary> selectAppSummary(EmpInfoVo empInfoVo){
        return selectList("mr.main.selectAppSummary", empInfoVo);
    }

    /**
     * 로그인 사용자의 임시변경 Summary
     * @param empInfoVo
     * @return
     */
    public MrSummary selectTempMrSummary(EmpInfoVo empInfoVo){
        return selectOne("mr.main.selectTempSummary", empInfoVo);
    }

    /**
     * 로그인 사용자의 MR 상세리스트
     * @param empInfoVo
     * @return MR Summary
     */
    public List<MrListVO> selectMrList(MrListVO mrListVO){
        /*        Map<String, String> param = new HashMap<String, String>();
        param.put("mrStepCd", mrStepCd);
        param.put("procStCd", procStCd);*/
        return selectList("mr.main.selectMrList", mrListVO);
    }

    /**
     * 로그인 사용자가 포함된 MR상세 리스트
     * @param mrListVO
     * @return
     */
    public List<MrListVO> selectAppMrList(MrListVO mrListVO){
        return selectList("mr.main.selectAppMrList", mrListVO);
    }

	public int getTechInvestCnt(EmpInfoVo empInfoVo) {
        return selectInt("mr.main.getTechInvestCnt", empInfoVo);
	}



}
