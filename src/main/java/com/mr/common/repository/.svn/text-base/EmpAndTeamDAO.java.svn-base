@Repository
public class EmpAndTeamDAO  extends BaseSqlMapRepository {

    /**
     * 로그인을 체크
     * @param empInfoVo
     * @return 사원정보
     */
    public EmpInfoVo loginCheck(EmpInfoVo empInfoVo){
        return selectOne("common.empAndTeam.loginCheck" , empInfoVo);         
    }

    /**
     * 로그인을 체크
     * @param empInfoVo
     * @return 사원정보
     */
    public EmpInfoVo getEmp(String empNo){
        return selectOne("common.empAndTeam.getEmp" , empNo);
    }


    /**
     * 사원정보 조회
     * @param empInfoVo
     * @return 사원정보 리스트
     */
    public List<EmpInfoVo> empSearch(EmpInfoVo empInfoVo){
        return selectList("common.empAndTeam.empSearch" , empInfoVo);
    }

    /**
     * 팀정보 조회
     * @param empInfoVo
     * @return 모든팀정보 리스트
     */
    public List<EmpInfoVo> teamSearch(EmpInfoVo empInfoVo){
        return selectList("common.empAndTeam.teamSearch", empInfoVo);
    }


    /**
     * 회계부서코드 조회
     * @param
     * @return 코드리스트
     */
    public List<CostCenterVO> selectCostCenter(String teamText) {
        return selectList("common.empAndTeam.selectCostCenter" , teamText);
    }

	public List<CostCenterVO> selectCostCenterMap(Map map) {
        return selectList("common.empAndTeam.selectCostCenterMap" , map);
	}
}
