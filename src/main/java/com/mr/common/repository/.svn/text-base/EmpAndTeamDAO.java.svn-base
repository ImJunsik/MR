package com.mr.common.repository;

import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Repository;

import com.base.orm.ibatis.BaseSqlMapRepository;
import com.mr.common.domain.CostCenterVO;
import com.mr.common.domain.EmpInfoVo;
import com.wm.util.Debug;
/**
 * 로그인 처리 DAO
 *
 * @author 박성룡
 * @version 1.0
 *
 *          <pre>
 * 수정일 | 수정자 | 수정내용
 * ---------------------------------------------------------------------
 * 2014.06.20 박성룡 최초 작성
